<h1>Update Product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name, class: "form-control", placeholder: "Product name" %>
</div>

<div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, number_to_currency(@product.price), class: "form-control", placeholder: "Product price" %>
</div>

<div class="form-group">
  <%= label_tag :description %>
  <%= text_area_tag :description, @product.description, class: "form-control", placeholder: "Product description" %>
</div>

<div>
  <%= button_tag 'Update Product', class: "btn btn-defaul" %>
</div>
<% end %>