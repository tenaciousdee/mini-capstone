 <div class="container">
   <div class="row">
     <div class="col-lg-12">
       <h1 class="text-center">Coffee</h1>
       <% @products.each do |product| %>
       <div class="col-lg-4">
        <div class="well well-lg">
            <h3><%= product.name %></h3>
            <img class="img-responsive" src="http://static.donquijote.org/images/tops/520/colombian-coffee.jpg" alt="coffee picture" />
            <button type="button" class="btn btn-info">$<%= product.price %></button>
            <p><%= product.description %></p>
            <button type="button" class="btn btn-primary btn-block">Buy Me</button>
        </div>
      </div>
      <% end %>      
    </div>
  </div>
</div>

 