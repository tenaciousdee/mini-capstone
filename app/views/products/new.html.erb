<h1>New Product</h1>
<%= form_tag '/products', method: :post do %>
<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, class: "form-control", placeholder: "Product name" %>
</div>

<div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, nil, class: "form-control", placeholder: "Product price" %>
</div>

<div class="form-group">
  <%= label_tag :image %>
  <%= text_field_tag :image, nil, class: "form-control", placeholder: "Product image URL" %>
</div>

<div class="form-group">
  <%= label_tag :description %>
  <%= text_area_tag :description, nil, class: "form-control", placeholder: "Product description" %>
</div>

<div>
  <%= button_tag 'Create New Product', class: "btn btn-defaul" %>
</div>
<% end %>