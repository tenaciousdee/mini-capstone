    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>New Product</h1>
<%= form_tag '/products', method: :post do %>
<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name, class: "form-control", placeholder: "Product name" %>
</div>

<div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price, class: "form-control", placeholder: "Product price" %>
</div>

<div class="form-group">
  <%= label_tag :description %>
  <%= text_area_tag :description, @product.description, class: "form-control", placeholder: "Product description" %>
</div>

<div>
  <%= button_tag 'Create New Product', class: "btn btn-default" %>
</div>
<% end %>